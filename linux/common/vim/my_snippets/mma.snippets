snippet ts "ToString - Mathematica" !w
ToString[$1];
endsnippet

snippet ft "Flatten - Mathematica" !w
Flatten[$1];
endsnippet

snippet rule "Rule - Mathematica" !w
/. Rule -> $1
endsnippet

snippet l "Lambda Function - Mathematica" !w
